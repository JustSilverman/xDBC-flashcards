

<div class="container">
  <h1> Welcome to your flashcard game bonanza!</h1>
    <% unless @rounds.nil? %> 
    <% @rounds.each do |round| %>
    <p>Round <%= round.id %> playing <%= round.deck.topic %> You have played <%= round.played_count %> cards and you have <%= round.unplayed_count %> cards left.
    <form name="replay" action="/rounds/new" method="get">
      <input type="submit" value="Replay"/>
    </form>
    <form name="continue" action="/rounds/<%= round.id %>" method="get"><input type="submit" value="Continue"/></form>
    </p>
    <% end %>
    <% end %>

    <form name='start_game' action='/rounds/new' method='get'>
    <input type="submit" value="Play new game"/>
  </form>
</div>

